%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field  :email, placeholder: 'name@example.com'
          = f.password_field :password, help: 'Must be at least 6 characters long'
          = f.text_field :full_name, label: 'Full Name', help: 'Same name as on credit card to be used'
          /* f.hidden_field cannot be used because invitation_token is not part of user */
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group.col-sm-offset-2
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key=#{ ENV['STRIPE_PUBLISHABLE_KEY'] } data-name="Myflix Sign Up Charge" data-description="$9.99 to sign up for best video service" data-amount="999"> </script>
